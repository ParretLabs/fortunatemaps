<!doctype html>
<html lang="en">
	<head>
		<%- include('head') %>

		<link rel="stylesheet" type="text/css" href="/css/home.css">

		<title>Fortunate Maps - Search</title>
	</head>
	<body>
		<%- include('nav'); %>

		<main role="main" class="container">
			<div class="starter-template">
				<div class="map-container">
					<%-
						maps.map(map => { // lol
							return `
								<div class="card map-card">
									<a href="/map/${map.mapID}"><img src="/thumbnail/${map.mapID}" class="card-img-top" alt="${map.name}"></a>
									<div class="card-body">
										<a href="/map/${map.mapID}"><p class="card-text text-center">
											<b>${map.name
												.replace(/</gi, "&lt;")
												.replace(/>/gi, "&gt;")
											}</b> by <b>${map.authorName
												.replace(/</gi, "&lt;")
												.replace(/>/gi, "&gt;")
											}</b>
										</p></a>
										<hr>
										<div class="btn-group w-100" role="group" aria-label="Basic example">
											<a type="button" class="btn btn-primary" href="/test/${map.mapID}">Test</a>
											<a type="button" class="btn btn-primary" href="/preview/${map.mapID}">Fullsize Preview</a>
										</div>
									</div>
								</div>
							`;
						}).join("");
					%>
				</div>
			</div>
		</main>

		<%- include('bodyscripts') %>
	</body>
</html>